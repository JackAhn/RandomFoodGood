<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".view.login.LoginActivity">

    <ImageView
        android:id="@+id/googleLoginBtn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/google_login"
        app:layout_constraintBottom_toTopOf="@+id/kakaoLoginBtn"
        app:layout_constraintEnd_toEndOf="@+id/kakaoLoginBtn"
        app:layout_constraintStart_toStartOf="@+id/kakaoLoginBtn" />

    <ImageView
        android:id="@+id/kakaoLoginBtn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/kakao_login_medium_narrow"
        app:layout_constraintBottom_toTopOf="@+id/naverLoginBtn"
        app:layout_constraintEnd_toEndOf="@+id/naverLoginBtn"
        app:layout_constraintStart_toStartOf="@+id/naverLoginBtn" />

    <ImageView
        android:id="@+id/naverLoginBtn"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginBottom="92dp"
        android:scaleType="centerCrop"
        android:src="@drawable/naver_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="- SNS 계정으로 손쉽게 시작하기 -"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/googleLoginBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="어디로 가서 먹어야 할지 모를땐?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="니음쩔"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>